{
  "name": "@bitcoinerlab/explorer",
  "homepage": "https://github.com/bitcoinerlab/explorer",
  "version": "0.0.1",
  "description": "Bitcoin Blockchain Explorer: Client Interface featuring Esplora and Electrum Implementations.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "prepublishOnly": "npm run build && npm test",
    "docs": "jsdoc -c jsdoc.json",
    "test": "npm run lint && npm run lint:test && jest",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts src/",
    "lint:test": "eslint --ignore-path .gitignore --ext .js,.ts test/"
  },
  "COMMENT_babel": "Babel plugins are are only needed for the jest testing environment. Jest needs to use commonjs. Also, jest cannot handle ESM converted code, since it uses 'import.meta.url'. See src/bindings.js. babel-plugin-transform-import-meta fixes it.",
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs",
          "babel-plugin-transform-import-meta"
        ]
      }
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitcoinerlab/explorer.git"
  },
  "keywords": [
    "bitcoin",
    "explorer",
    "esplora",
    "electrum"
  ],
  "author": "Jose-Luis Landabaso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitcoinerlab/explorer/issues"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.20.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "babel-plugin-transform-import-meta": "^2.2.0",
    "better-docs": "^2.7.2",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "jsdoc": "^3.6.11",
    "prettier": "^2.8.4",
    "ts-node-dev": "^2.0.0"
  }
}
